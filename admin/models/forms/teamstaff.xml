<?xml version="1.0" encoding="UTF-8"?>
<form
	addrulepath="/administrator/components/com_sportsmanagement/models/rules"
	addfieldpath="/administrator/components/com_sportsmanagement/models/fields">
	<fieldset name="details">
	<field
			name="id"
			type="hidden"
		/>
		<field
			name="projectteam_id"
			type="hidden"
		/>
		<field
			name="person_id"
			type="hidden"
		/>
		<field
			name="project_position_id"
			type="positionlist"
			class="inputbox"
			default="0"
			size="1"
			label="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_POS"
			description="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_POS_DESC"
			>
			<option
				value="0">
				COM_SPORTSMANAGEMENT_GLOBAL_SELECT_POSITION</option>
		</field>			
		<field
			name="injury"
			type="radio"
			default="0"
			label="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_INJURED"
			description="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_INJURED_DESC">
		<option value="0">JNO</option>
		<option value="1">JYES</option>
		</field>	
		<field
			name="injury_date"
			type="matchdaylist"
			required="false"
			varname="cid"
			label="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_INJURY_DATE"
			description="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_INJURY_DATE_DESC"
			class="inputbox"/>			
		<field
			name="injury_end"
			type="matchdaylist"
			required="false"
			varname="cid"
			label="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_INJURY_END"
			description="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_INJURY_END_DESC"
			class="inputbox"/>	
		<field
			name="injury_detail"
			type="text"
			label="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_INJURY_TYPE"
			description="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_INJURY_TYPE_DESC"
			class="inputbox"/>				
		<field
			name="suspension"
			type="radio"
			default="0"
			label="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_SUSPENDED"
			description="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_SUSPENDED_DESC">
		<option value="0">JNO</option>
		<option value="1">JYES</option>
		</field>				
		<field
			name="suspension_date"
			type="matchdaylist"
			required="false"
			varname="cid"
			label="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_SUSPENSION_DATE"
			description="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_SUSPENSION_DATE_DESC"
			class="inputbox"/>			
		<field
			name="suspension_end"
			type="matchdaylist"
			required="false"
			varname="cid"
			label="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_SUSPENSION_END"
			description="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_SUSPENSION_END_DESC"
			class="inputbox"/>	
		<field
			name="suspension_detail"
			type="text"
			label="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_SUSPENSION_TYPE"
			description="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_SUSPENSION_TYPE_DESC"
			class="inputbox"/>				
		<field
			name="away"
			type="radio"
			default="0"
			label="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_AWAY"
			description="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_AWAY_DESC">
		<option value="0">JNO</option>
		<option value="1">JYES</option>
		</field>			
		<field
			name="away_date"
			type="matchdaylist"
			required="false"
			varname="cid"
			label="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_AWAY_DATE"
			description="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_AWAY_DATE_DESC"
			class="inputbox"/>			
		<field
			name="away_end"
			type="matchdaylist"
			required="false"
			varname="cid"
			label="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_AWAY_END"
			description="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_AWAY_END_DESC"
			class="inputbox"/>	
		<field
			name="away_detail"
			type="text"
			label="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_AWAY_TYPE"
			description="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_AWAY_TYPE_DESC"
			class="inputbox"/>				
	</fieldset>			
	
  <fieldset name="picture">		
			<field
				name="picture"
				type=""
        default=""
				label="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_PIC"
				description="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_PIC_DESC"
				class="inputbox"
				preview="show"
				targetfolder="teamstaffs"
				directory=""/>			
	</fieldset>
  
	<fieldset name="description">		
			<field
				name="notes"
				type="editor"
				label="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_DESCR"
				description="COM_SPORTSMANAGEMENT_ADMIN_TEAMSTAFF_DESCR_DESC"
				width="450" 
				filter="safehtml"/>			
	</fieldset>		
</form>