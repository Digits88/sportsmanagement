<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>PLUGIN_JSM_BOOTSTRAP</name>
	<author>diddipoeler</author>
	<creationDate>Januar 2014</creationDate>
	<copyright>(C) 2014 diddipoeler</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>diddipoeler@arcor.det</authorEmail>
	<authorUrl>http://www.fussballineuropa.de</authorUrl>
	<version>1.0</version>
	<description>PLUGIN_JSM_BOOTSTRAP_DESC</description>
	
	<files>
        <filename plugin="jsm_bootstrap">jsm_bootstrap.php</filename>
        <filename>index.html</filename>
        <folder>language</folder>
    </files>
    
   <languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_jsm_bootstrap.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_jsm_bootstrap.sys.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_jsm_bootstrap.ini</language>
		<language tag="de-DE">de-DE/de-DE.plg_jsm_bootstrap.sys.ini</language>
	</languages> 

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="load_bootstrap" 
        type="radio" 
        default="1" 
        class="radio btn-group btn-group-yesno"
        label="PLUGIN_JSM_BOOTSTRAP_XML_LOAD_BOOTSTRAP"
					description="PLUGIN_JSM_BOOTSTRAP_XML_LOAD_BOOTSTRAP_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			<field name="load_k2css" 
        type="radio" 
        default="1" 
        class="radio btn-group btn-group-yesno"
        label="PLUGIN_JSM_BOOTSTRAP_XML_LOAD_K2CSS"
					description="PLUGIN_JSM_BOOTSTRAP_XML_LOAD_K2CSS_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>	
  </fieldset>
		</fields>
	</config>
  
</extension>        	