<?xml version="1.0" encoding="utf-8"?>
<metadata>
	<layout title="COM_SPORTSMANAGEMENT_XML_TIPUSERS_LAYOUT_TITLE">
		<message>
			<![CDATA[COM_SPORTSMANAGEMENT_XML_TIPUSERS_LAYOUT_DESCR]]>
		</message>
	</layout>
<fields name="request"
addfieldpath ="/administrator/components/com_sportsmanagement/models/fields">
		<fieldset	name="request"
					label="COM_SPORTSMANAGEMENT_XML_BASIC_FIELDSET_LABEL"
					>
    <field name="cfg_which_database" 
    type="radio" 
    default="0"
    class="radio btn-group btn-group-yesno"
			label="COM_SPORTSMANAGEMENT_SETTINGS_USE_JOOMLA_DATABASE_TITLE" 
      description="COM_SPORTSMANAGEMENT_SETTINGS_USE_JOOMLA_DATABASE_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
			<field	type="sql" name="prediction_id" label="COM_SPORTSMANAGEMENT_XML_JL_PRED_USERS_SELECT_GAME"
					description="COM_SPORTSMANAGEMENT_XML_JL_PRED_USERS_SELECT_GAME_DESC"
					query="	SELECT CASE WHEN CHAR_LENGTH(alias) THEN CONCAT_WS(':', id, alias) ELSE id END AS value,
									name AS prediction_id
						 	FROM #__sportsmanagement_prediction_game
						 	WHERE published=1
						 	ORDER BY name"/>

			<field	type="dependsql" 
      name="uid" 
      depends="prediction_id" 
      task="predictionmembersoptions" 
      label="COM_SPORTSMANAGEMENT_XML_JL_PRED_USERS_SELECT_MEMBER"
					description="COM_SPORTSMANAGEMENT_XML_JL_PRED_USERS_SELECT_MEMBER_DESC"
					query="" />

			

		</fieldset>
	</fields>
</metadata>