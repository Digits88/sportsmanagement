<?xml version="1.0" encoding="UTF-8"?>
<form addrulepath="/administrator/components/com_sportsmanagement/models/rules"
	addfieldpath="/administrator/components/com_sportsmanagement/models/fields">
	<fieldset name="details"
    label="COM_SPORTSMANAGEMENT_TABS_DETAILS"
  description="COM_SPORTSMANAGEMENT_TABS_DETAILS_DESC">
	<field
			name="id"
			type="hidden"
		/>
	
	<field
			name="published"
			type="list"
			class="inputbox"
			default="1"
			size="1"
			label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC">
			<option
				value="1">
				JPUBLISHED</option>
			<option
				value="0">
				JUNPUBLISHED</option>
		</field>
    
 <field
			name="mode"
			type="list"
			class="inputbox"
			default="1"
			size="1"
			label="COM_SPORTSMANAGEMENT_ADMIN_PGAMES_MODE"
			description="COM_SPORTSMANAGEMENT_ADMIN_PGAMES_MODE_DESC">
			<option
				value="1">
				COM_SPORTSMANAGEMENT_ADMIN_PGAMES_TOTO</option>
			<option
				value="0">
				COM_SPORTSMANAGEMENT_ADMIN_PGAMES_TIPP</option>
		</field>

    <field
			name="overview"
			type="list"
			class="inputbox"
			default="1"
			size="1"
			label="COM_SPORTSMANAGEMENT_ADMIN_PGAMES_OVERVIEW"
			description="COM_SPORTSMANAGEMENT_ADMIN_PGAMES_OVERVIEW_DESC">
			<option
				value="1">
				COM_SPORTSMANAGEMENT_ADMIN_PGAMES_HALF_SEASON</option>
			<option
				value="0">
				COM_SPORTSMANAGEMENT_ADMIN_PGAMES_FULL_SEASON</option>
		</field>



<!-- alles für die joker -->
<field 
			name="joker" 
			type="radio" 
			default="0"
			onclick="change_joker();"
			label="COM_SPORTSMANAGEMENT_ADMIN_PGAMES_JOKER" 
			description="COM_SPORTSMANAGEMENT_ADMIN_PGAMES_JOKER_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
    
<field 
			name="joker_limit" 
			type="hidden" 
			default="0"
			label="COM_SPORTSMANAGEMENT_ADMIN_PGAMES_JOKER_LIMIT" 
			description="COM_SPORTSMANAGEMENT_ADMIN_PGAMES_JOKER_LIMIT_DESC"
      />
<field 
			name="points_tipp_joker" 
			type="hidden" 
			default="0"
			label="Points for wrong prediction with Joker" 
			description=""
      />
<field 
			name="points_correct_result_joker" 
			type="hidden" 
			default="0"
			label="Points for correct prediction with Joker" 
			description=""
      />
<field 
			name="points_correct_diff_joker" 
			type="hidden" 
			default="0"
			label="Points for correct margin with Joker" 
			description=""
      />      
<field 
			name="points_correct_draw_joker" 
			type="hidden" 
			default="0"
			label="Points for draw difference with Joker" 
			description=""
      />
<field 
			name="points_correct_tendence_joker" 
			type="hidden" 
			default="0"
			label="Points for correct tendency with Joker" 
			description=""
      />
      
      			
<!-- alles für den meister -->    
<field 
			name="champ" 
			type="radio" 
			default="0"
			label="COM_SPORTSMANAGEMENT_ADMIN_PGAMES_CHAMP" 
			description="COM_SPORTSMANAGEMENT_ADMIN_PGAMES_CHAMP_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
<field 
			name="points_tipp_champ" 
			type="hidden" 
			default="0"
			label="Points for picking the champion" 
			description=""
      />    

<!-- punkte  -->
<field 
			name="points_tipp" 
			type="text" 
			default="0"
			label="Points for wrong prediction" 
			description=""
      />


<field 
			name="points_correct_result" 
			type="text" 
			default="0"
			label="Points for correct prediction" 
			description=""
      />

<field 
			name="points_correct_diff" 
			type="text" 
			default="0"
			label="Points for correct margin" 
			description=""
      />

<field 
			name="points_correct_draw" 
			type="text" 
			default="0"
			label="Points for draw difference" 
			description=""
      />

<field 
			name="points_correct_tendence" 
			type="text" 
			default="0"
			label="Points for correct tendency" 
			description=""
      />

                                                                		
	</fieldset>
  
	<fieldset name="help"
    label="COM_SPORTSMANAGEMENT_TABS_HELP"
  description="COM_SPORTSMANAGEMENT_TABS_HELP_DESC">  
  </fieldset>
  
  
  				
</form>